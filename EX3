import random

tours = 1
nb = random.randint(0, 100)
trouve = False
while trouve == False:
    nbj = int(input("Entrez un nombre : "))
    if nbj < nb:
        print("Plus grand")
        tours = tours + 1
    elif nbj > nb:
        print("plus petit")
        tours = tours + 1
    else:
        if nbj == nb:
            print("Trouv√© !")
            trouve = True
print(f"nombres de tours : {tours}")
